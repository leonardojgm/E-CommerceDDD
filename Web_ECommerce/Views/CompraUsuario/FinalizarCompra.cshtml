@model Entities.Entities.CompraUsuario

@{
    ViewData["Title"] = "FinalizarCompra";
}

<div>
    <h4>Dados da Compra</h4>
    <a class="nav-link text-dark" asp-area="" asp-controller="CompraUsuario" asp-action="ConfirmarCompra">Confirmar a Compra</a>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnderecoCompleto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EnderecoCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser.CEP)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.CEP)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.QuantidadeProdutos)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QuantidadeProdutos)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ValorTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorTotal)
        </dd>
    </dl>

    <h4>Produtos Comprados</h4>

    <table class="table">
        <thred>
            <tr>
                <th>Nome</th>
                <th>Imagem</th>
                <th>Descrição</th>
                <th>Observação</th>
                <th>Valor</th>
                <th>Quantidade</th>
            </tr>
        </thred>
        <tbody>
            @foreach (var item in Model.ListaProdutos)
             {
                 <tr>
                     <td>
                         @Html.DisplayNameFor(modelItem => item.Nome)                
                     </td>                 
                     <td>
                         @{
                             if (!string.IsNullOrWhiteSpace(item.Url))
                             {
                                 <img width="80" height="80" src="@item.Url"/>
                             }
                          }
                     </td>                 
                     <td>
                         @Html.DisplayNameFor(modelItem => item.Descricao)
                     </td>                 
                     <td>
                         @Html.DisplayNameFor(modelItem => item.Observacao)
                     </td>                 
                     <td>
                         @Html.DisplayNameFor(modelItem => item.Valor)
                     </td>                 
                     <td>
                         @Html.DisplayNameFor(modelItem => item.QtdCompra)
                     </td>
                 </tr>
             }
        </tbody>
    </table>
</div>
